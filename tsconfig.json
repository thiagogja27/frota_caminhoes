{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [{
      "name": "next"
    }],
    "paths": {
      "@/*": ["./*"],
      "@/types/*": ["app/dashboard/types/*"]  // Adicione esta linha
    },
    "baseUrl": "."  // Adicione esta linha
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/dashboard/types/**/*.ts"  // Garante que os tipos sejam inclu√≠dos
, "next.config.mjs"  ],
  "exclude": ["node_modules"]
}